%h3.heading.h3.text-white.pt-3
  Resend Unlock
%h6.text-white.pb-3
  Need us to resend your unlock code?
= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-tertiary" }) do |f|
  = f.error_notification
  = f.full_error :unlock_token
  .form-inputs
    = f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" }
  .form-actions
    = f.button :submit, "Resend unlock instructions", class: "btn btn-block btn-success"
