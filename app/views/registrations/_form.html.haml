-# frozen_string_literal: true
= simple_form_for([@event, @registration]) do |f|
  = f.error_notification
  - if f.object.errors[:base].present?
    = f.error_notification message: f.object.errors[:base].to_sentence

  .form-inputs
    %fieldset
      = f.fields_for :participants do |builder|
        = render "participants/shared_fields", f: builder, selected_race: @race

  .form-actions
    .float-right
      = f.button :submit, "Next Step", class: "btn btn-success btn-md"
