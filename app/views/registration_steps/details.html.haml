%section.slice.slice-lg
  .container
    .row
      .col-sm-12.col-md-4.col-lg-3.d-none.d-md-block
        = render "events/card",
          event: @event.decorate,
          context_classes: "sticky-top sticky-top-offset-6",
          show_footer: false
      .col-sm-12.col-md-8.col-lg-6
        %noscript
          = render 'shared/no_script_warning'
        .card.border-primary
          .card-header.bg-primary
            = render "registration_steps/card_headers/details",
              event: @event,
              registration: @registration
          .card-body
            %h4 Registration Details
            %p Tell us a little more about yourself, #{@registration.participant.first_name}!
            %hr
            = render "registration_steps/forms/details",
              event: @event,
              registration: @registration
