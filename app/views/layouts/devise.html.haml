!!!
%html
  %head
    = render "layouts/shared/meta_tags"
    %title Spectrum Trail Racing
    %link{:href => "https://fonts.googleapis.com/css?family=Nanum+Pen+Script|Nunito:400,600,700,800|Roboto:400,500,700&display=swap", :rel => "stylesheet"}/
    = favicon_link_tag asset_path("favicon")
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload"
    = javascript_include_tag "application", "data-turbolinks-track": "reload"
    = Gon::Base.render_data
    - if Rails.env.production?
      = render partial: "shared/drift_script"
  %body{class: "application #{controller_name}", id: "#{controller_name}_#{action_name}"}
    %main.main.with-topo-background{style: "min-height: 100vh; background-color: linen"}
      = render partial: 'flash_messages', flash: flash
      .container.d-flex.align-items-center
        .col
          .row.justify-content-center{style: "margin-top: 10vh"}
            .col-sm-12.col-md-8.col-lg-5
              .card.bg-tertiary.text-white.mb-4
                .card-body
                  %img.img-fluid{src: asset_path("logo-no-text"), style: "max-width: 8rem;"}
                  = yield
                .card-footer.bg-tertiary
                  = render "devise/shared/links"
