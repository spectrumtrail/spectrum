.row.justify-content-between
  .col-5
    %h1 Events
  .col-2
    = link_to "New", new_admin_event_path, class: "btn btn-md btn-success float-right"
%hr
- if @events.any?
  .row
    - @events.each do |event|
      .col-4
        = render "event", event: event

- else
  .row
    .col
      .text-center
        %h4.text-muted.p-4
          No events exist yet.
