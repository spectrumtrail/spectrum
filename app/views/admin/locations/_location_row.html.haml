%tr
  %td
    .media.align-items-center
      .media-body
        %h6.h5.font-weight-normal.ml-1
          = location.name
  %td
    = link_to location.address_link do
      = location.address_text
  %td= local_time_ago location.updated_at
  %td
    .btn-group.float-right
      = link_to edit_admin_location_path(location),
        class: "btn btn-sm btn-outline-primary" do
        %i.fa.fa-edit
        Edit
      - unless location.events.any?
        = link_to admin_location_path(location),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn btn-sm btn-outline-danger" do
          %i.fas.fa-exclamation-triangle
          Remove
