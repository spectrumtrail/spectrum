= content_for :admin_area_title do
  Archived Registrations
.row
  .col-12
    - selected = params[:filter_scope]
    .row.mb-2
      .col
        .btn-group
          %a.btn.btn-sm.btn-outline-primary{href: archived_admin_registrations_path(request.params.merge(filter_scope: :completed)), class: selected == 'completed' ? "active" : nil}
            %i.fas.fa-check-circle.text-success
            Complete
          %a.btn.btn-sm.btn-outline-primary{href: archived_admin_registrations_path(request.params.merge(filter_scope: :incomplete)), class: selected == 'incomplete' ? "active" : nil}
            %i.fas.fa-circle-notch.text-warning
            In-Progress
          %a.btn.btn-sm.btn-outline-primary{href: archived_admin_registrations_path(request.params.merge(filter_scope: :cancelled)), class: selected == 'cancelled' ? "active" : nil}
            %i.fa.fa-ban.text-danger
            Cancelled
          %a.btn.btn-sm.btn-outline-primary{href: archived_admin_registrations_path, class: selected == nil ? "active" : nil}
            %i.fa.fa-list
            ALL
        = link_to 'Show Not Archived', admin_registrations_path, class: "text-primary"
.row
  .col-12
    .card
      = render "table"
.row.mt-3
  .col
    = paginate @registrations
